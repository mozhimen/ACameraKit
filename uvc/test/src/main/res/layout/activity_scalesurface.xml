<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stevez="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <include layout="@layout/layout_scale_title_bar" />

        <com.mozhimen.camerak.uvc.ScaleGLSurfaceView
            android:id="@+id/camera_textureview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            stevez:cameraDir="up"
            stevez:isMirror="false"
            stevez:previewHeight="480"
            stevez:previewWidth="640"
            stevez:scalableType="centerInside"/>

</LinearLayout>